<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win81.blogsapp.SetupActivity">

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <ImageButton
            android:id="@+id/setupImageBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:background="@color/cardview_light_background"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/add" />

        <EditText
            android:id="@+id/setupNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/setupImageBtn"
            android:layout_margin="20dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Your Display Name ..."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/setupSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:text="SETUP"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
